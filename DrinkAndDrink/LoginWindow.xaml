<Window x:Class="DrinkAndDrink.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrinkAndDrink"
        mc:Ignorable="d" Background="{StaticResource AccordionBackgroundBrush}"
        Title="最喜歡喝飲料惹" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="帳號" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Name="txtAccount" Grid.Column="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" />
        <Label Content="密碼" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Name="txtPassword" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" />
        <Button Grid.Row="2"   Content="註冊" Click="ButtonRegister_Click"/>
        <Button  Grid.Row="2" Grid.Column="1"   Content="登入" Click="ButtonLogin_Click"/>
    </Grid>
</Window>
